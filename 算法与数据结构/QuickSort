//快速排序
public class QuickSort {
    //2个指针，一个从左，一个从右，选取第一个为参考
    public void sort(int[] arr){
        sort(arr,0,arr.length-1);
    }

    private void sort(int[] arr,int left,int right){
        if(left >= right) return;;

        int target = arr[left];

        while (left < right){
            //从右向左寻找 找到第一个比基准小的元素
            while (right > left && arr[right] >= target){
                right--;
            }
            arr[left] = arr[right];

            //从左向右寻找 找到第一个比基准大的元素
            while(left < right && arr[left] < target){
                left++;
            }

            arr[right] = arr[left];
        }

        arr[left] = target;

        sort(arr,0,left - 1);
        sort(arr,right + 1,right);
    }
}
